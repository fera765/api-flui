{
  "name": "api-backend",
  "version": "1.0.0",
  "description": "API Backend with Clean Architecture, DDD and SOLID principles",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --transpile-only --ignore-watch node_modules src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=src/tests/unit --passWithNoTests",
    "test:integration": "jest --testPathPattern=src/tests/integration --passWithNoTests",
    "test:e2e": "jest --testPathPattern=src/tests/e2e --passWithNoTests",
    "test:e2e:watch": "jest --testPathPattern=src/tests/e2e --watch",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "clean-architecture",
    "ddd",
    "solid"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/semver": "^7.7.1",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/axios": "^0.9.36",
    "axios": "^1.12.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  }
}
